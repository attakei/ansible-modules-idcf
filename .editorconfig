# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
indent_style = space
insert_final_newline = true
charset = utf-8

# 2 space indentation
[*.{yml}]
indent_size = 2

# 4 space indentation
[*.{py}]
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# reStructuredText
[*.rst]
indent_size = 2

# Markdown
[*.md]
indent_size = 4
